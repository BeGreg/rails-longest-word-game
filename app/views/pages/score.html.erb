<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 35%), url(' <%= asset_path("cover.jpg")%>')">
  <div class="banner-content">
    <h1>And now your result!</h1>
    <div class = "container">
      <table class="table">
        <tr>
          <td class="tf-picto"><i class="fa fa-file-word-o" aria-hidden="true"></i></td>
          <td class="tf-text">Your word:</td>
          <td class="tf-data"><strong>"<%= @score.attempt %>"</strong></td>
        </tr>
        <tr>
          <td class="tf-picto"><i class="fa fa-clock-o" aria-hidden="true"></i></td>
          <td class="tf-text">Time taken to answer:</td>
          <td class="tf-data"><strong> <%= @score.total_time.round(1) %></strong> </td>
        </tr>
        <tr>
          <td class="tf-picto"><i class="fa fa-line-chart" aria-hidden="true"></i></td>
          <td class="tf-text">Your score:</td>
          <td class="tf-data"><strong><%= @score.final_score.round(1) %></strong></td>
        </tr>
        <tr>
          <td class = "message" colspan=3>
            <i class="fa fa-arrow-right" aria-hidden="true"></i>
            <strong><%= @score.message %></strong></td>
        </tr>
      </table>
    </div>
  </div>
</div>
